<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ygl.piggylife.notebook" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ygl.piggylife.notebook.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ygl.piggylife.notebook.HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.ygl.piggylife.notebook.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ygl.piggylife.notebook.CategoryManagerActivity"
            android:label="@string/title_activity_category_manager" >
        </activity>
        <activity
            android:name="com.ygl.piggylife.notebook.CategoryEditActivity"
            android:label="@string/title_activity_category_edit" >
        </activity>
        <activity
            android:name="com.ygl.piggylife.notebook.QueryActivity"
            android:label="@string/title_activity_query" >
        </activity>
        <activity
            android:name="com.ygl.piggylife.notebook.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>
